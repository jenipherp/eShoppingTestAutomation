<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="eShopping Tests" parallel="false">
    <parameter name="browser" value="chrome" />
    <parameter name="profile" value="smoke"/>
    <listeners>
        <listener class-name="test.TestListener" />
    </listeners>

    <!-- Smoke Test Suite -->

    <test name="SmokeTests">
        <groups>
            <run>
                <include name="smoke"/>
            </run>
        </groups>
        <classes>
            <class name="test.LoginTest"/>
            <class name="test.LogOutTest"/>
            <class name="test.SignUpTest"/>
            <class name="test.ProductTest"/>
        </classes>
    </test>

    <!-- Regression Test Suite -->
    <test name="RegressionTests">
        <groups>
            <run>
                <include name="regression"/>
            </run>
        </groups>
        <classes>
            <class name="test.SignUpTest" />
            <class name="test.LoginTest" />
            <class name="test.ProductTest" />
            <class name="test.CartTest" />
        </classes>
    </test>
</suite>